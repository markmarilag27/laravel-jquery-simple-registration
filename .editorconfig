# EditorConfig - Consistent code style across editors

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Laravel Blade Templates
[*.blade.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# JavaScript (including jQuery)
[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JSON
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

# YAML (e.g. .yml files for Docker, CI/CD)
[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Makefiles (require tabs)
[Makefile]
indent_style = tab

# Dockerfiles
[Dockerfile]
indent_style = space
indent_size = 4
